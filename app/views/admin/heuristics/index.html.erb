<% titulo "Listagem de heurísticas" %>

<%= render "layouts/admin_menu" %>

<div class="container-default">
<div class="page-header">
  <h1>Listagem de heurísticas</h1>
</div>

<div class="well well-sm">
  <%= link_to '<i class="glyphicon glyphicon-asterisk"></i> Nova Heurística'.html_safe, new_admin_heuristic_path, :class => 'btn btn-primary' %>
</div>

<div class="table-responsive text-center">
<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th class="text-center">Nome</th>
      <th class="text-center">Descrição</th>
      <th class="text-center col-md-2">Dispositivo</th>
      <th class="col-md-1"></th>
      <th class="col-md-1"></th>
    </tr>
  </thead>

  <tbody>
    <% @admin_heuristics.each do |admin_heuristic| %>
      <tr>
        <td><%= link_to admin_heuristic.name, [admin_heuristic, :questions] %></td>
        <td><%= admin_heuristic.description %></td>
        <td><%= image_tag admin_heuristic.device.icon.url(:thumb) %>  <%= admin_heuristic.device.name %></td>
        <td><%= link_to '<i class="tip glyphicon glyphicon-pencil" data-toggle="tooltip" data-placement="top" title="Editar"></i>'.html_safe, edit_admin_heuristic_path(admin_heuristic) %></td>
        <td><%= link_to '<i class="tip glyphicon glyphicon-trash" data-toggle="tooltip" data-placement="top" title="Deletar"></i>'.html_safe, admin_heuristic, method: :delete, data: { confirm: 'Tem certeza que deseja deletar essa heurística e suas perguntas?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<div class="text-center">
<%= will_paginate @admin_heuristics %>
</div>

</div>
