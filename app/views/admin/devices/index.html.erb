<% titulo "Listagem de dispositivos" %>

<%= render "layouts/admin_menu" %>

<div class="container-default">
<div class="page-header">
  <h1>Listagem de dispositivos</h1>
</div>

<div class="well well-sm">
  <%= link_to '<i class="glyphicon glyphicon-asterisk"></i> Novo Dispositivo'.html_safe, new_admin_device_path, :class => 'btn btn-primary' %>
</div>

<div class="table-responsive text-center">
<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th class="text-center col-md-2">√çcone</th>
      <th class="text-center">Dispositivo</th>
      <th class="col-md-1"></th>
      <th class="col-md-1"></th>
    </tr>
  </thead>

  <tbody>
    <% @admin_devices.each do |admin_device| %>
      <tr>
      <td><%= image_tag admin_device.icon.url(:thumb) %></td>
        <td><%= link_to admin_device.name, admin_device %></td>
        <td><%= link_to '<i class="tip glyphicon glyphicon-pencil" data-toggle="tooltip" data-placement="top" title="Editar"></i>'.html_safe, edit_admin_device_path(admin_device) %></td>
        <td><%= link_to '<i class="tip glyphicon glyphicon-trash" data-toggle="tooltip" data-placement="top" title="Deletar"></i>'.html_safe, admin_device, method: :delete, data: { confirm: 'Tem certeza que deseja deletar esse dispositivo?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<div class="text-center">
<%= will_paginate @admin_devices %>
</div>

</div>
