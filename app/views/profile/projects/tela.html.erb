<div class="well well-sm text-center" style="margin-top:-20px; border-radius:0px; padding:5px 0px 3px">
	<%= link_to '<i class="glyphicon glyphicon-chevron-left"></i> Voltar'.html_safe, profile_project_avaliar_path(@project.id), :class => 'btn btn-sm btn-default pull-left', :style => 'margin:3px 0 0 3px;' %>
  	<h4><%= @project.name %> <small>(<strong>Heurística:</strong> <%= @project.heuristic.name %> <strong>Dispositivo:</strong> <%= @project.heuristic.device.name %>)</small></h4>
</div>

<div id="paleta" class="row-fluid">
	<div id="perguntas" class="bg-primary col-md-4">
		<div class="well well-sm well-incolor">
				<h3><%= @pergunta.name %> <small><a href="#collapse<%= @pergunta.id %>" data-toggle="collapse" style="color:#e5dcf4">(O que é isso?)</a><br>Pergunta x de 10</small></h3>

				<div id="collapse<%= @pergunta.id %>" class="panel-collapse collapse">
					<div class="panel-body">
					<% if @pergunta.description.empty? %>
						<h5 class="text-center">Sem descrição</h5>
					<% else %>	
						<%= @pergunta.description %>
					<% end %>
					</div>
				</div>
				<hr class="rule-paleta">
				<div class="form-group">
					<label>Existe(m) problema(s) nessa interface?</label> <i class="tip glyphicon glyphicon-info-sign" data-toggle="tooltip" data-placement="top" title="Marque sim ou não caso haja algum problema referente a pergunta em questão"></i><br>
					<input type="checkbox" value=""> Sim  <input type="checkbox" value=""> Não
				</div>
				<div class="form-group">
					<label>Nível do problema</label> <i class="tip glyphicon glyphicon-info-sign" data-toggle="tooltip" data-placement="top" title="Marque sim ou não caso haja algum problema referente a pergunta em questão"></i><br>
					<input type="checkbox" value=""> 0 <input type="checkbox" value=""> 1 <input type="checkbox" value=""> 2 <input type="checkbox" value=""> 3 <input type="checkbox" value=""> 4
				</div>
				<div class="form-group">
					<label>Comentários:</label> <i class="tip glyphicon glyphicon-info-sign" data-toggle="tooltip" data-placement="top" title="(Não obrigatório) Deixe um comentário para ajudar o designer a resolver problemas ou melhorar a usabilidade"></i><br>
					<textarea class="form-control" rows="5"></textarea>
				</div>	

			<a href="" class="btn btn-primary pull-right">Próxima <i class="glyphicon glyphicon-chevron-right"></i></a>
		</div>
	</div>

	<div id="paleta-tela" class="col-md-8 text-center" style="padding-top:15px">
		<%= image_tag @tela.tela.url, :class => 'img-responsive img-shadow'%>
	</div>
</div>