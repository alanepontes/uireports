<% titulo "Login" %>

<div class="container well">

<div class="page-header text-center">
	<h1>Login</h1>
</div>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>

<div class="form-group">	
  <div><%= f.label :email, "E-Mail" %><br />
  <%= f.email_field :email, :class => 'form-control' %></div>
</div>

<div class="form-group">
  <div><%= f.label :password, "Senha" %><br />
  <%= f.password_field :password, :class => 'form-control' %></div>
</div>  

<div class="checkbox">
  <% if devise_mapping.rememberable? -%>
  <%= f.check_box :remember_me %> <%= f.label :remember_me, "Lembrar" %>
  <% end -%>
</div>

<div class="form-group text-center">
  <div><%= f.submit "Entrar", :class => 'btn btn-lg btn-primary' %></div>
<% end %>
</div>

<div class="text-center">
	<%= render "devise/shared/links" %>
</div>
</div>
